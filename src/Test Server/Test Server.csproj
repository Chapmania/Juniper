<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>
  
  <PropertyGroup>
    <AssemblyName>Test Server</AssemblyName>
    <RootNamespace>Juniper.HTTP</RootNamespace>
    <OutputType>Exe</OutputType>
    <StartupObject>Juniper.HTTP.Program</StartupObject>
    <TargetFramework>net48</TargetFramework>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Juniper.Root\Juniper.Root.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="content\index.html">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
</Project>