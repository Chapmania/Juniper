<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>

  <PropertyGroup>
    <AssemblyName>Juniper.UnityEditor.ConfigurationManagement</AssemblyName>
    <RootNamespace>Juniper.ConfigurationManagement</RootNamespace>
    <OutputType>Library</OutputType>
    <TargetFramework>net472</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <Platforms>AnyCPU</Platforms>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec ContinueOnError="true" Command="XCOPY &quot;$(TargetDir)\$(AssemblyName).dll* &quot; &quot;$(SolutionDir)Juniper\Plugins\Editor\Juniper&quot; /C /I /F /Y" />
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\Juniper.Root\Juniper.Root.csproj">
      <Private>false</Private>
    </ProjectReference>
    <ProjectReference Include="..\Juniper.Client\Juniper.Client.csproj">
      <Private>false</Private>
    </ProjectReference>
    <ProjectReference Include="..\Juniper.UnityEditor\Juniper.UnityEditor.csproj" />
    <ProjectReference Include="..\Juniper.Unity\Juniper.Unity.csproj">
      <Private>false</Private>
    </ProjectReference>
    <Reference Include="$(UNITY_ROOT)\Editor\Data\Managed\UnityEngine.dll">
      <Private>false</Private>
    </Reference>
    <Reference Include="$(UNITY_ROOT)\Editor\Data\Managed\UnityEditor.dll">
      <Private>false</Private>
    </Reference>
  </ItemGroup>

</Project>
