<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.props" />
  </ImportGroup>

  <PropertyGroup>
    <IsPackable>false</IsPackable>
    <TargetFramework>net48</TargetFramework>
  </PropertyGroup>

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>

  <ItemGroup>
    <PackageReference Include="nunit" Version="3.12.0" />
    <PackageReference Include="NUnit3TestAdapter" Version="3.16.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.5.0" />
    <PackageReference Include="Veldrid" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.IO.Compression" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Juniper.Azure\Juniper.Azure.csproj" />
    <ProjectReference Include="..\Juniper.GoogleMaps\Juniper.GoogleMaps.csproj" />
    <ProjectReference Include="..\Juniper.OpenWeatherMap\Juniper.OpenWeatherMap.csproj" />
    <ProjectReference Include="..\Juniper.Root\Juniper.Root.csproj" />
    <ProjectReference Include="..\Juniper.Client\Juniper.Client.csproj" />
    <ProjectReference Include="..\Juniper.Server\Juniper.Server.csproj" />
    <ProjectReference Include="..\Juniper.UnityEditor\Juniper.UnityEditor.csproj" />
    <ProjectReference Include="..\Juniper.Unity\Juniper.Unity.csproj" />
    <ProjectReference Include="..\Juniper.Veldrid\Juniper.Veldrid.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
