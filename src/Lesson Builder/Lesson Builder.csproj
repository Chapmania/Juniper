<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>

  <PropertyGroup>
    <AssemblyName>Lesson Builder</AssemblyName>
    <RootNamespace>Juniper</RootNamespace>
    <OutputType>Exe</OutputType>
    <StartupObject>Juniper.GameProgram</StartupObject>
    <TargetFramework>net48</TargetFramework>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
    <DefineConstants>OPENGL4</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenTK" Version="3.1.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Shaders\orange.frag">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Shaders\copy.vert">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
