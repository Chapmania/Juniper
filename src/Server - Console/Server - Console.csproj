<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.props" />
  </ImportGroup>

  <PropertyGroup>
    <AssemblyName>Test Server</AssemblyName>
    <RootNamespace>Juniper</RootNamespace>
    <OutputType>Exe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <StartupObject>Juniper.Program</StartupObject>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>
  
  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <ApplicationManifest>app.debug.manifest</ApplicationManifest>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <ApplicationManifest>app.release.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Juniper.Root\Juniper.Root.csproj" />
    <ProjectReference Include="..\Juniper.Server\Juniper.Server.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="content\index.html">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="content\sub\test.txt">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>