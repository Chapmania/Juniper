<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>

  <PropertyGroup>
    <AssemblyName>jcopy</AssemblyName>
    <RootNamespace>FileCopier</RootNamespace>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <StartupObject>FileCopier.Program</StartupObject>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <Platforms>AnyCPU</Platforms>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
    <Description>A hack for copying assemblies into Unity projects</Description>
    <NoWin32Manifest>true</NoWin32Manifest>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..</OutputPath>
  </PropertyGroup>

</Project>