<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net48</TargetFramework>
        <AssemblyName>jcopy</AssemblyName>
        <RootNamespace>File_Copier</RootNamespace>
        <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
        <Authors>Sean T. McBeth</Authors>
        <Description>A hack for copying assemblies into Unity projects</Description>
        <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
        <ApplicationIcon />
        <OutputType>Exe</OutputType>
        <StartupObject>File_Copier.Program</StartupObject>
        <Configuration>false</Configuration>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
        <DebugType>none</DebugType>
        <DebugSymbols>false</DebugSymbols>
        <PlatformTarget>AnyCPU</PlatformTarget>
    </PropertyGroup>

</Project>