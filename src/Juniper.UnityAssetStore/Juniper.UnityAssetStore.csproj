<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>

  <PropertyGroup>
    <AssemblyName>Juniper.UnityAssetStore</AssemblyName>
    <RootNamespace>Juniper.UnityAssetStore</RootNamespace>
    <OutputType>Library</OutputType>

    <TargetFramework>net472</TargetFramework>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <Prefer32Bit>false</Prefer32Bit>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Juniper.Root\Juniper.Root.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HtmlAgilityPack" Version="1.11.17" />
  </ItemGroup>
</Project>