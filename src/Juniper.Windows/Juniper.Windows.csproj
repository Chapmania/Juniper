<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup>
    <Import Project="..\..\Juniper.props" />
  </ImportGroup>

  <PropertyGroup>
    <AssemblyName>Juniper.Windows</AssemblyName>
    <RootNamespace>Juniper.Windows</RootNamespace>
    <OutputType>Library</OutputType>
    <TargetFramework>net48</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
  </PropertyGroup>

  <ImportGroup>
    <Import Project="..\..\Juniper.targets" />
  </ImportGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='net472' Or '$(TargetFramework)'=='net48'">
    <Reference Include="System.Drawing" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0' Or '$(TargetFramework)'=='netstandard2.1' Or '$(TargetFramework)'=='netcoreapp3.1'">
    <PackageReference Include="System.Drawing.Common" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
    <Reference Include="WindowsBase" />
    <Reference Include="PresentationCore" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Juniper.Root\Juniper.Root.csproj" />
    <ProjectReference Include="..\Juniper.Client\Juniper.Client.csproj" />
  </ItemGroup>

</Project>
