<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Juniper.Veldrid.Demo</AssemblyName>
    <RootNamespace>Juniper</RootNamespace>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Sean T. McBeth</Authors>
    <Copyright>Copyright Â© Sean T. McBeth 2019</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Models\International Congress of Munich.zip" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Images\grass.jpg">
      <LogicalName>Images/grass.jpg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Images\hand.png">
      <LogicalName>Images/hand.jpg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Images\rock.jpg">
      <LogicalName>Images/rock.jpg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Images\sand.jpg">
      <LogicalName>Images/sand.jpg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Images\sheep.png">
      <LogicalName>Images/sheep.png</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Images\tiles.png">
      <LogicalName>Images/tiles.png</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Images\water.jpg">
      <LogicalName>Images/water.jpg</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Models\cube.mtl">
      <LogicalName>Models/cube.mtl</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Models\cube.obj">
      <LogicalName>Models/cube.obj</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Shaders\tex-cube.frag">
      <LogicalName>Shaders/tex-cube.frag</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="Shaders\tex-cube.vert">
      <LogicalName>Shaders/tex-cube.vert</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Veldrid.SPIRV" Version="1.0.13" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\lib\veldrid\src\Veldrid\Veldrid.csproj" />
    <ProjectReference Include="..\Juniper.Veldrid\Juniper.Veldrid.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Images\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Models\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Shaders\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
</Project>
